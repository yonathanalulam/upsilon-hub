---
import CategoryNav from '../components/CategoryNav.astro';

interface Props {
  title: string;
  description?: string;
}

const { 
  title, 
  description = "Upsilon Hub is an automated intelligence platform tracking the latest breakthroughs in Astrophysics, Quantum Physics, High Energy, and Nanotech." 
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/atom.png" />
    <meta name="generator" content={Astro.generator} />

    <title>{title.includes('|') ? title : `${title}`}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />
    <meta name="robots" content="index, follow" />
    
    <meta property="og:site_name" content="Upsilon Hub" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content="Upsilon Hub - The Frontier of Physics" />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://upsilon-hub.vercel.app/social-image.jpg" />

    <meta name="google-site-verification" content="GtX_w4WkaPm6ZJsz755t1qsyC2QRrCSzJJ881KrVch8" />

    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "WebSite",
        "name": "Upsilon Hub",
        "alternateName": ["UpsilonHub", "The Frontier of Physics"],
        "url": "https://upsilon-hub.vercel.app/",
        "publisher": {
          "@type": "Organization",
          "name": "Upsilon Hub",
          "logo": {
            "@type": "ImageObject",
            "url": "https://upsilon-hub.vercel.app/atom.png"
          }
        }
      }
    </script>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700;800&family=Merriweather:ital,wght@0,300;0,400;0,700;1,300&display=swap" rel="stylesheet">
    
    <script is:inline>
      if (localStorage.getItem('theme') === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
        document.documentElement.classList.add('dark');
      } else {
        document.documentElement.classList.remove('dark');
      }
    </script>
    
    <style is:global>
      :root { font-family: 'Outfit', sans-serif; }
      
      #preloader {
        position: fixed;
        inset: 0;
        z-index: 99999;
        background-color: #0f1117; 
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 2rem;
        transition: opacity 0.8s ease, transform 0.8s cubic-bezier(0.76, 0, 0.24, 1);
      }
      html:not(.dark) #preloader { background-color: #ffffff; }

      .preloader-hidden {
        opacity: 0;
        transform: scale(1.05);
        pointer-events: none;
      }

      .atom-container {
        position: relative;
        width: 120px;
        height: 120px;
        display: flex;
        justify-content: center;
        align-items: center;
        perspective: 1000px;
      }

      .nucleus {
        position: absolute;
        width: 16px;
        height: 16px;
        background: #3b82f6;
        border-radius: 50%;
        box-shadow: 0 0 25px #3b82f6;
        z-index: 10;
        animation: pulseNucleus 3s infinite ease-in-out;
      }

      .orbit {
        position: absolute;
        width: 100%;
        height: 100%;
        border-radius: 50%;
        border: 2px solid rgba(59, 130, 246, 0.2);
        transform-style: preserve-3d;
      }
      
      .orbit::before {
        content: '';
        position: absolute;
        top: -5px;
        left: 50%;
        transform: translateX(-50%);
        width: 10px;
        height: 10px;
        background: white;
        border-radius: 50%;
        box-shadow: 0 0 15px white;
      }
      html:not(.dark) .orbit::before { background: #3b82f6; box-shadow: none; }

      .orbit:nth-child(1) { animation: rotate1 2s linear infinite; }
      .orbit:nth-child(2) { animation: rotate2 2s linear infinite; }
      .orbit:nth-child(3) { animation: rotate3 2s linear infinite; }

      @keyframes rotate1 {
        0% { transform: rotateZ(0deg) rotateX(65deg) rotateY(0deg); }
        100% { transform: rotateZ(360deg) rotateX(65deg) rotateY(0deg); }
      }
      @keyframes rotate2 {
        0% { transform: rotateZ(0deg) rotateX(65deg) rotateY(60deg); }
        100% { transform: rotateZ(360deg) rotateX(65deg) rotateY(60deg); }
      }
      @keyframes rotate3 {
        0% { transform: rotateZ(0deg) rotateX(65deg) rotateY(-60deg); }
        100% { transform: rotateZ(360deg) rotateX(65deg) rotateY(-60deg); }
      }
      @keyframes pulseNucleus {
        0%, 100% { transform: scale(1); opacity: 1; }
        50% { transform: scale(1.15); opacity: 0.9; }
      }

      .preloader-text {
        font-family: 'Outfit', sans-serif;
        font-weight: 800;
        font-size: 1.75rem;
        letter-spacing: -0.05em;
        color: white;
        opacity: 0;
        animation: fadeInText 1s ease forwards 0.5s; 
      }
      html:not(.dark) .preloader-text { color: #0f1117; }

      @keyframes fadeInText { to { opacity: 1; } }

      body, header, nav, footer, div, span, p, h1, h2, h3, a, button {
        transition-property: color, background-color, border-color, text-decoration-color, fill, stroke;
        transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
        transition-duration: 300ms; 
      }

      .article-card {
        transition: transform 0.4s ease, box-shadow 0.4s ease;
      }
      .article-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px -5px rgba(0, 0, 0, 0.1);
        z-index: 10;
      }
      .dark .article-card:hover {
        box-shadow: 0 10px 20px -5px rgba(0, 0, 0, 0.5);
      }

      h1, h2, h3, h4, h5, h6 { letter-spacing: -0.025em; }
      
      ::-webkit-scrollbar { width: 10px; }
      ::-webkit-scrollbar-track { background: transparent; }
      ::-webkit-scrollbar-thumb {
        background-color: rgba(156, 163, 175, 0.3); 
        border-radius: 9999px;
        border: 2px solid transparent;
        background-clip: content-box;
      }
      ::-webkit-scrollbar-thumb:hover { background-color: rgba(156, 163, 175, 0.6); }
      .dark ::-webkit-scrollbar-thumb { background-color: rgba(75, 85, 99, 0.4); }
      .dark ::-webkit-scrollbar-thumb:hover { background-color: rgba(75, 85, 99, 0.7); }

      html.is-transitioning *, html.is-transitioning *::before, html.is-transitioning *::after {
        transition: none !important;
      }

      ::view-transition-old(root), ::view-transition-new(root) {
        animation: none; mix-blend-mode: normal; animation-duration: 500ms; 
      }
      ::view-transition-new(root) { z-index: 9999; }
      ::view-transition-old(root) { z-index: 1; }
    </style>
  </head>
  
  <body class="bg-gray-50 text-gray-900 dark:bg-[#0f1117] dark:text-gray-100 font-sans antialiased selection:bg-blue-600/30 selection:text-blue-600 dark:selection:text-blue-300 relative flex flex-col min-h-screen">
    
    <div id="preloader">
      <div class="atom-container">
        <div class="orbit"></div>
        <div class="orbit"></div>
        <div class="orbit"></div>
        <div class="nucleus"></div>
      </div>
      <div class="preloader-text">
        UPSILON<span class="text-blue-600">.HUB</span>
      </div>
    </div>
    
    <script is:inline>
      if (window.hasSeenPreloader) {
        const p = document.getElementById('preloader');
        if (p) p.style.display = 'none';
      }
    </script>

    <div class="fixed inset-0 -z-10 overflow-hidden pointer-events-none">
      <div class="absolute -top-[20%] -left-[10%] w-[50%] h-[50%] rounded-full bg-blue-400/20 blur-[120px] dark:bg-blue-900/20 mix-blend-multiply dark:mix-blend-screen animate-pulse duration-[4000ms]"></div>
      <div class="absolute -bottom-[20%] -right-[10%] w-[50%] h-[50%] rounded-full bg-violet-400/20 blur-[120px] dark:bg-violet-900/20 mix-blend-multiply dark:mix-blend-screen animate-pulse duration-[7000ms]"></div>
    </div>

    <div class="fixed top-0 left-0 w-full h-1 z-[60] pointer-events-none bg-transparent">
      <div id="progress-bar" class="h-full bg-gradient-to-r from-blue-600 to-violet-600 origin-left scale-x-0 transition-transform duration-100 ease-out shadow-[0_0_15px_rgba(37,99,235,0.6)]"></div>
    </div>

    <header id="main-header" class="sticky top-0 z-50 transition-transform duration-500 ease-[cubic-bezier(0.16,1,0.3,1)]">
      <nav class="bg-white/80 dark:bg-[#0f1117]/80 backdrop-blur-xl border-b border-gray-200 dark:border-gray-800">
        <div class="max-w-[1800px] mx-auto px-6 h-20 flex items-center justify-between">
          
          <a href="/" class="group flex items-center gap-2 hover:scale-105 transition-transform duration-300">
            <span class="text-2xl font-black tracking-tighter text-gray-900 dark:text-white">
              UPSILON<span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-violet-600 group-hover:from-blue-500 group-hover:to-violet-500 transition-all">.HUB</span>
            </span>
          </a>

          <div class="flex items-center gap-3">
            <a href="/about" aria-label="About" class="magnetic-btn p-2.5 rounded-xl hover:bg-gray-100 dark:hover:bg-gray-800 text-gray-500 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
            </a>
            <button id="theme-toggle-btn" class="magnetic-btn p-2.5 rounded-xl hover:bg-gray-100 dark:hover:bg-gray-800 focus:outline-none ring-1 ring-gray-200 dark:ring-gray-700 bg-gray-50 dark:bg-gray-900/50 group relative overflow-hidden active:scale-95">
              <svg id="theme-toggle-light-icon" class="hidden w-5 h-5 text-yellow-400 transition-transform duration-700 group-hover:rotate-[180deg]" fill="currentColor" viewBox="0 0 20 20"><path d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" fill-rule="evenodd" clip-rule="evenodd"></path></svg>
              <svg id="theme-toggle-dark-icon" class="hidden w-5 h-5 text-blue-300 transition-transform duration-700 group-hover:-rotate-12" fill="currentColor" viewBox="0 0 20 20"><path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path></svg>
            </button>
          </div>
        </div>
      </nav>
      <CategoryNav />
    </header>

    <main class="max-w-[1800px] mx-auto px-6 py-10 flex-grow relative min-h-screen">
      <slot />
    </main>

    <footer class="border-t border-gray-200 dark:border-gray-800 mt-20 py-10 text-center opacity-80 hover:opacity-100 transition-opacity">
      <p class="text-gray-500 dark:text-gray-600 text-sm font-medium uppercase tracking-wider">
        &copy; {new Date().getFullYear()} Upsilon Hub. The Frontier of Physics.
      </p>
    </footer>

    <button id="scrollToTop" class="fixed bottom-8 right-8 p-3 rounded-full bg-blue-600 text-white shadow-lg hover:bg-blue-700 hover:scale-110 transition-all duration-500 opacity-0 invisible translate-y-10 z-50">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"></path></svg>
    </button>

    <script>
      const initPreloader = () => {
        const preloader = document.getElementById('preloader');
        if (!preloader) return;
        
        if (window.hasSeenPreloader) {
          preloader.style.display = 'none';
          return;
        }
        
        window.addEventListener('load', () => {
          setTimeout(() => {
            preloader.classList.add('preloader-hidden');
            window.hasSeenPreloader = true;
          }, 2000); 
        });
      };

      const initMagnetics = () => {
        const magneticBtns = document.querySelectorAll('.magnetic-btn');
        magneticBtns.forEach(btn => {
          btn.addEventListener('mousemove', (e) => {
            const rect = btn.getBoundingClientRect();
            const x = (e as MouseEvent).clientX - rect.left - rect.width / 2;
            const y = (e as MouseEvent).clientY - rect.top - rect.height / 2;
            (btn as HTMLElement).style.transition = 'transform 0s';
            (btn as HTMLElement).style.transform = `translate(${x * 0.2}px, ${y * 0.2}px)`;
          });
          btn.addEventListener('mouseleave', () => {
            (btn as HTMLElement).style.transition = 'transform 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275)';
            (btn as HTMLElement).style.transform = 'translate(0, 0)';
          });
        });
      };

      initPreloader();
      initMagnetics();
      document.addEventListener('astro:page-load', () => {
        initMagnetics();
      });

      const themeToggleBtn = document.getElementById('theme-toggle-btn');
      const lightIcon = document.getElementById('theme-toggle-light-icon');
      const darkIcon = document.getElementById('theme-toggle-dark-icon');
      const html = document.documentElement;

      if (html.classList.contains('dark')) lightIcon.classList.remove('hidden');
      else darkIcon.classList.remove('hidden');

      themeToggleBtn.addEventListener('click', (event) => {
        const isMobile = window.matchMedia('(max-width: 768px)').matches;

        if (isMobile || !document.startViewTransition) {
          performToggle();
          return;
        }

        document.documentElement.classList.add('is-transitioning');
        
        const transition = document.startViewTransition(() => {
          performToggle();
        });

        transition.ready.then(() => {
          const x = event.clientX;
          const y = event.clientY;
          const endRadius = Math.hypot(Math.max(x, innerWidth - x), Math.max(y, innerHeight - y));

          document.documentElement.animate(
            { clipPath: [`circle(0px at ${x}px ${y}px)`, `circle(${endRadius}px at ${x}px ${y}px)`] },
            { duration: 500, easing: "ease-in", pseudoElement: "::view-transition-new(root)" }
          );
        });

        transition.finished.then(() => {
          document.documentElement.classList.remove('is-transitioning');
        });
      });

      function performToggle() {
        lightIcon.classList.toggle('hidden');
        darkIcon.classList.toggle('hidden');
        const isDark = html.classList.toggle('dark');
        localStorage.setItem('theme', isDark ? 'dark' : 'light');
      }

      const header = document.getElementById('main-header');
      const progressBar = document.getElementById('progress-bar');
      const scrollBtn = document.getElementById('scrollToTop');
      let lastScrollY = window.scrollY;

      window.addEventListener('scroll', () => {
        const currentScrollY = window.scrollY;
        const winScroll = document.body.scrollTop || document.documentElement.scrollTop;
        const height = document.documentElement.scrollHeight - document.documentElement.clientHeight;
        const scrolled = (winScroll / height);
        if (progressBar) progressBar.style.transform = `scaleX(${scrolled})`;

        if (currentScrollY > lastScrollY && currentScrollY > 100) {
          header.classList.add('-translate-y-full');
        } else {
          header.classList.remove('-translate-y-full');
        }
        
        if (currentScrollY > 400) {
          scrollBtn.classList.remove('opacity-0', 'invisible', 'translate-y-10');
        } else {
          scrollBtn.classList.add('opacity-0', 'invisible', 'translate-y-10');
        }
        lastScrollY = currentScrollY;
      });

      scrollBtn.addEventListener('click', () => {
        window.scrollTo({ top: 0, behavior: 'smooth' });
      });
    </script>
  </body>
</html>