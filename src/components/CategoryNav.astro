---
import newsData from '../data/news.json';
const allCategories = newsData.map(item => item.category);
const uniqueCategories = [...new Set(allCategories)].sort();
---

<div class="sticky top-20 z-40 bg-white dark:bg-[#0f1117] border-b border-gray-200 dark:border-gray-800 shadow-sm transition-colors">
  <div class="max-w-[1800px] mx-auto px-6 overflow-x-auto hide-scrollbar">
    <nav class="flex items-center h-14 gap-8">
      
      <a href="/" class="text-[11px] font-extrabold uppercase tracking-widest text-blue-600 dark:text-blue-400 whitespace-nowrap flex-shrink-0 hover:underline">
        All Topics
      </a>

      <a href="/saved" class="flex items-center gap-2 text-[11px] font-extrabold uppercase tracking-widest text-gray-900 dark:text-white whitespace-nowrap flex-shrink-0 hover:text-blue-600 dark:hover:text-blue-400 transition-colors">
        <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 24 24"><path d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"></path></svg>
        Saved Items
      </a>

      <a href="/about" class="flex items-center gap-2 text-[11px] font-extrabold uppercase tracking-widest text-gray-900 dark:text-white whitespace-nowrap flex-shrink-0 hover:text-blue-600 dark:hover:text-blue-400 transition-colors">
        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
        About
      </a>
      
      <div class="h-4 w-px bg-gray-300 dark:bg-gray-700 flex-shrink-0"></div>

      {uniqueCategories.map(category => (
        <a 
          href={`/category/${category.toLowerCase().replace(/\s+/g, '-')}`} 
          class="text-[11px] font-bold uppercase tracking-widest text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-white transition-colors whitespace-nowrap flex-shrink-0"
        >
            {category}
        </a>
      ))}
    </nav>
  </div>
</div>

<style>
  .hide-scrollbar::-webkit-scrollbar { display: none; }
  .hide-scrollbar { -ms-overflow-style: none; scrollbar-width: none; }
</style>